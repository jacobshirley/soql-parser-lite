{
    "name": "soql-parser-lite-monorepo",
    "private": true,
    "version": "1.0.1",
    "type": "module",
    "description": "",
    "scripts": {
        "compile": "pnpm -r run compile && pnpm compile:examples && pnpm run compile:test",
        "compile:examples": "tsx ./scripts/build-examples.ts && prettier --write EXAMPLES.md",
        "compile:test": "tsc --noEmit",
        "prepublish": "pnpm -r run compile",
        "test": "pnpm -r --no-sort run test",
        "prepare": "husky || true",
        "lint:staged": "lint-staged --allow-empty",
        "lint:commit": "commitlint --edit $1",
        "format": "prettier --write '**/*.{js,ts,json,md,yaml,yml}'",
        "docs:gen": "sh -c 'pnpm docs:gen:md \"$@\" && pnpm docs:gen:html \"$@\"' --",
        "docs:gen:md": "./scripts/gen-md-docs.sh",
        "docs:gen:html": "./scripts/gen-html-docs.sh"
    },
    "lint-staged": {
        "*.{js,ts,json,md}": "pnpm format"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "packageManager": "pnpm@10.26.1",
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@types/node": "^24.10.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "playwright": "^1.57.0",
        "prettier": "^3.7.2",
        "tsx": "^4.20.6",
        "typedoc": "^0.28.15",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "soql-parser-lite": "1.0.1"
    },
    "pnpm": {
        "packageExtensions": {
            "@vitest/browser": {
                "peerDependencies": {
                    "@vitest/runner": "*"
                }
            }
        }
    }
}
